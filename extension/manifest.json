{
    "name": "LinkBack",
    "version": "2.0",
    "manifest_version": 2,
    "description": "Extension to display incoming links in a popup on any webpage.",
    "homepage_url": "http://linkback.herokuapp.com/",
    "permissions": [
	"webRequest","<all_urls>"
    ],
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    // there are some content pages in google but no way to pick them out unfortunately
	    "exclude_matches": ["*://*.google.com/*", "https://www.facebook.com/", "http://twitter.com/"],
	    "js": ["script.js"]
	}
    ],
    "web_accessible_resources": ["reset.css", "linkback.css"]

}
